.full-page-container
  #welcome-page-section.section.page-section.active tubular="#{@enable_tubular}" tubular-video-id="o1prvOC1_90"
    #welcome-block
      .inner
        .text-wrap
          .blue-header
            |Welcome!
          = raw "<div class='white-header'>We create logos, corporate identity, websites, labels and packaging</div>"


        a.icon-link.play-link href=""
          = inline_svg("svg/play.svg")
          span.icon-link-label
            |Watch video
        a.icon-link.play-link href=""
          = inline_svg("svg/portfolio.svg")
          span.icon-link-label
            |View portfolio
  #home-portfolio-section.section.page-section
    /- 3.times do |i|
      .slide.home-portfolio-slide style="background-image: url(#{asset_path("portfolio_home_banners/#{i+1}.jpg")})"
    .home-slider-wrap
      .home-slider
        = render "projects/main_banner", banner: @project_banners.first
        = render "projects/main_banner", banner: @project_banners.second
        = render "projects/main_banner", banner: @project_banners.third



  #home-services-section.section.page-section
    .services-intro
      .title
        = t("pages.home.services.title")
      p.description
        = t("pages.home.services.description")
    - @services.each do |service|
      - service_icon_path = service.icon.path
      /- service_icon_path = "svg/expertise/logo_and_ci.svg"

      - service_bg_image = service.home_bg.url(:xxl) if service.home_bg.exists?(:xxl)
      - service_bg_image = service.list_image.url(:home_xxl) if service_bg_image.blank? && service.list_image.exists?(:home_xxl)

      a.service href=""
        .service-bg-image style=("background-image:url(#{service_bg_image})" if service_bg_image.present?)
        .service-name-and-description
          .service-name
            |#{service.name}
          = raw "<div class='service-description'>#{service.description}</div>"

        .svg-icon.service-icon
          /= inline_svg(service_icon_path)
          = embedded_svg_from_absolute_path(service_icon_path)

  #home-footer.section.page-section.fp-auto-height
    .inner
