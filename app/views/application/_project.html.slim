- if !defined?(active) || active.blank?
  - active = false
- if !defined?(avatar_style) || avatar_style.blank?
  - avatar_style = :popup
a.block.project href=project.url class=("active" if active)
  img src=project.avatar.url(avatar_style)
  .description-block
    .inner
      - if project.services.any?
        .project-related-services
          - project.services.each do |service|
            - service_icon_path = service.icon_path
            .icon title=service.name
              = embedded_svg_from_absolute_path(service_icon_path)
      .project-number
        = project.formatted_project_number(@ordered_project_ids)
      .name
        = raw project.name
      .separator
      .customer-name.italic
        = raw project.customer_name