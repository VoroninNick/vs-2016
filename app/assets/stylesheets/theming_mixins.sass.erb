@import "_selectors"
//= theme($primary-color: red, $secondary-color: blue, $third-color: green, $body-bg: #212121, $body-color: white, $technology-color: $primary-color, $project-bottom-banner-title-color: $primary-color, $button-lines-color: $primary-color, $desktop-slider-background-color: $primary-color)
= theme(<%= Project.project_css_mixin_options_string %>)
  color: $body_color
  background: $body_bg


  .h1, .h2, .h3, .h4, .h5, .h6, h1, h2, h3, h4, h5, h6, .header, .page-wrap .title
    color: $primary_color



  .project-banner
    .project-description-block
      .title
        color: $top_banner_title_color

      sup
        color: $top_banner_title_sup_color

      .description
        color: $top_banner_description_color

  .primary-color
    color: $primary_color
  .secondary-color
    color: $secondary_color
  .third-color
    color: $third_color

  .with-line
    &.primary-color
      &:before
        background: $primary_color
    &.secondary-color
      &:before
        background: $secondary_color
    &.third-color
      &:before
        background: $third_color

  .project-details-a
    &:hover
      color: $link_hover_color

  .project-content

    .project-large-section-title
      color: $project_large_section_title_color


    .btn, .icon-btn
      &:before, &:after
        background: $button_lines_color

<% Project::PROJECT_PARTS.each do |k, v| %>
  <%= v %>
    background-color: $<%= k %>_bg_color
    color: $<%= k %>_text_color
    .h2
      color: $<%= k %>_header_color
<% end %>



  .project-technologies
    svg
      .technology-svg-logo
        &, #{$svg-part-selector}
          fill: $technology_color
      .technology-svg-orbit
        #{$svg-part-selector}
          fill: $technology_svg_orbit_color
    .name
      color: $technology_name_color


  .project-bottom-banner
    .title
      color: $project_bottom_banner_title_color
    .description
      color: $project_bottom_banner_description_color
    .actions
      .dark
        background: $project_bottom_banner_buttons_color

  .desktop-slider
    .screen-image
      &:before
        background: $desktop_slider_background_color


